{{#partial "content"}}

    <section id="animalstoo">
        <div class="py-5 bg-light">
        <div class="container">

            <h1 class="display-4 fw-bold lh-1 mb-3">Wildlife Records</h1>
                  <div class="row">
                    {{#each animal}}
                        <div class="col-sm-3 my-3">
                        <div class="card shadow-sm">
                                <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Placeholder: Thumbnail" preserveAspectRatio="xMidYMid slice" focusable="false"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"/></svg>
                                <div class="card-body">

                                    <div class="w-100">
                                      <p> {{name}}</p>
                                      <p>{{risk}}</p>
                                       <p>{{location}}</p>
                                    </div> {{#each rangers}}
                                    <div class="w-100">
                                      <p> {{rangerName}}</p>
                                      <p> {{radioTelephoneFrequency}}</p>
                                      <p> {{badgeNumber}}</p>
                                    </div>
                                {{/each}}

                                    <div class="d-flex justify-content-between align-items-center">
                                        <div class="btn-group">
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Delete</button>
                                            <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                                        </div>
                                        <small class="text-muted">{{time}}</small>
                                    </div>
                                </div>
                        </div>
                        </div>
                    {{/each}}
                    </div>
        </div>
    </div>
    </section>


{{/partial}}

{{> "layout.hbs"}}