{{#partial "content"}}

    <section class="py-5 text-center container">
        <div class="row py-lg-5">
            <div class="col-lg-6 col-md-8 mx-auto">
                <h1 class="fw-light">Animals that have bee Sighted</h1>
                <p class="lead text-muted">We have over 500 hundred species of Flora and Fauna in our ecosystem. Recently, we have develop an e-system to help us record our wild animals.
                <p>
                    <a href="#sightingstoo" class="btn btn-primary my-2">View Sighting Records</a>
                    <a href="/animals" class="btn btn-secondary my-2">View AnimalsRecords</a>
                </p>
            </div>
        </div>
    </section>

    <section id="sightingstoo" class="bg-danger p-2 text-dark bg-opacity-10">
        <div class="container col-xl-10 col-xxl-8 px-4 py-5">
            <div class="row align-items-center g-lg-5 py-5">
                <div class="col-lg text-center text-lg-start">
                    <h1 class="display-4 fw-bold lh-1 mb-3">Sighting Records</h1>


                    {{#if sightings}} <!--if sightings exist, then -->
                        <table class="table">
                            <thead>
                            <tr>
                                <th scope="col">ID.</th>
                                <th scope="col">Species Name</th>
                                <th scope="col">Sighted Location</th>
                                <th scope="col">Name of Ranger</th>
                                <th scope="col">RadioTelephone Channel</th>
                                <th scope="col">Time </th>
                            </tr>
                            </thead>
                            <tbody>
                            {{#each heroes }} <!--loop-->
                            <tr>
                                <td scope="row"></td>
                                <td scope="row"></td><!--show-->
                                <td scope="row"></td>
                                <td scope="row"></td>
                                <td scope="row"></td>
                                <td scope="row"></td>
                            {{/each}}
                            </tr>

                            </tbody>
                        </table>

                    {{else}} <!--no heroes! -->
                        <tr scope="row">No Sightings Records to show at the moment</tr>
                    {{/if}}

                </div>
            </div>
        </div>
    </section>

{{/partial}}

{{> "layout.hbs"}}