{{#partial "content"}}

    <section id="animals">
        <div class="container col-xl-10 col-xxl-8 px-4 py-5">
            <div class="row align-items-center g-lg-5 py-5">
                <div class="col-lg-7 text-center text-lg-start">
                    <h1 class="display-4 fw-bold lh-1 mb-3">Record your sightings here</h1>
                    <p class="col-lg-10 fs-4">Thank you for taking part of this program</p>
                </div>
                <div class="col-md-10 mx-auto col-lg-5">
                    <form action="/animals/new" method="post"  class="p-4 p-md-5 border rounded-3 shadow-lg bg-light">

                        <h4 class="mb-3">Record a Species</h4>

                        <div class="row g-2 mb-3">
                            <div class="col-md">
                                <div class="form-floating">
                                    <input type="email" class="form-control" id="floatingInputGrid" placeholder="species" required>
                                    <label for="floatingInputGrid">Species Name</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-floating">
                                    <select class="form-select" id="floatingSelectGrid" aria-label="Floating label select example" required>
                                        <option value="new-born">New Born</option>
                                        <option value="young">Young</option>
                                        <option value="Adult">Adult</option>
                                    </select>
                                    <label for="floatingSelectGrid">Age</label>
                                </div>
                            </div>
                        </div>
                        <div class="row g-2 mb-3">
                            <div class="col-md">
                                <div class="form-floating">
                                    <select class="form-select" id="floatingSelectGrid" aria-label="Floating label" required>
                                        <option value="endangered">Endangered</option>
                                        <option value="Least-Concern">Least-Concern</option>
                                    </select>
                                    <label for="floatingSelectGrid">Existence Risk</label>
                                </div>
                            </div>
                            <div class="col-md">
                                <div class="form-floating">
                                    <select class="form-select" id="floatingSelectGrid" aria-label="Floating label select example" required>
                                        <option value="new-born">Savannah grasslands</option>
                                        <option value="young">Riverine</option>
                                        <option value="Adult">Marshland</option>
                                        <option value="Adult">Forest</option>
                                    </select>
                                    <label for="floatingSelectGrid">Location</label>
                                </div>
                            </div>
                        </div>
                        <button class="w-100 btn btn-lg btn-primary" type="submit">Record Sighting</button>
                        <hr class="my-4">
                    </form>
                </div>
            </div>
        </div>
    </section>
